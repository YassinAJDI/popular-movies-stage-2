<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:id="@+id/review_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="10dp"
        android:background="@drawable/border"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/review_author_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/review_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:layout_toEndOf="@+id/review_author_label"
            android:layout_toRightOf="@+id/review_author_label"
            tools:text="Author of the Review" />

        <TextView
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="6dp"
            android:layout_below="@+id/review_author_label"
            android:fontFamily="sans-serif-light"
            android:lines="8"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="The Text of the Review here The Text of the Review here The Text of the Review here The Text of the Review here" />

        <TextView
            android:id="@+id/read_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_below="@+id/review_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:text="@string/read_more" />

    </RelativeLayout>
</android.support.v7.widget.CardView>